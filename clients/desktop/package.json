{
  "name": "traffic-router-desktop",
  "version": "1.0.0",
  "description": "Traffic Router Desktop Application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "webpack --mode production",
    "build:main": "tsc src/main.ts --outDir dist --target es2020 --module commonjs --esModuleInterop --allowSyntheticDefaultImports",
    "build:windows": "electron-builder --windows",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder --windows --linux --mac",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.trafficrouter.desktop",
    "productName": "Traffic Router",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*",
      "package.json",
      "!node_modules/**/*",
      "node_modules/axios/**/*",
      "node_modules/electron-store/**/*",
      "node_modules/electron-updater/**/*"
    ],
    "extraResources": [
      {
        "from": "../../server",
        "to": "server",
        "filter": [
          "**/*",
          "!node_modules"
        ]
      },
      {
        "from": "../../lib",
        "to": "lib",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../../config",
        "to": "config",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "Network"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.networking"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Traffic Router"
    },
    "publish": {
      "provider": "github",
      "owner": "traffic-router",
      "repo": "desktop-app"
    }
  },
  "keywords": [
    "traffic-router",
    "proxy",
    "vpn",
    "geolocation",
    "ai-services"
  ],
  "author": "Traffic Router Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "css-loader": "^6.11.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "html-webpack-plugin": "^5.6.4",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "electron-store": "^8.0.0",
    "electron-updater": "^6.0.0"
  }
}
